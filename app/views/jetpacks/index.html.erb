<div class="container">
  <h2>Available jetpacks</h2>

  <% @jetpacks.each do |jetpack| %>
    <div class="card-product my-2">
      <img src="assets/images/default.jpg" />
      <div class="card-product-infos">
        <h2><%= jetpack.title %></h2>
        <p><strong>$<%= jetpack.price %></strong></p>
        <%= link_to "Book now!", jetpack_path(jetpack), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
