<%= simple_form_for [jetpack, booking], html: { class: "booking-form"} do |f| %>
  <%= f.input :booking_date, html5: true %>
  <%= f.input :comment, label: "Comments (100 characters max)" %>
  <%=  link_to "Read Terms and Conditions", liability_waiver_path, class: "link-light" %>
  <%= f.input :terms_and_conditions, as: :boolean, label: "I agree to the Terms and Conditions" %>
   <%= f.submit "Book now!", class: "btn booking-submit" %>
<% end %>
